                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/submit_answers_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
