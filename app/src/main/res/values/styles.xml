<resources>

    <!-- Quiz app theme. -->
    <style name="QuizAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Submit button style -->
    <style name="QuizAppTheme.SubmitButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/submitButton</item>
    </style>

    <!-- Try Again button style -->
    <style name="QuizAppTheme.ResetButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/resetButton</item>
    </style>

</resources>